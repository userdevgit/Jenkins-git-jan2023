//Run 2 test stages parallely only if the branch is master
pipeline {
    agent any 
    stages {
        stage('parallel') {
            parallel {
                stage('STAGE-1') {
                    when {
                        branch 'main'
                    }
                    steps{
                        sh "echo STEGE-2 executes if branch is master"
                    }
                }

                stage('STAGE-2'){
                    when {
                        branch 'master'
                    }
                    steps{
                        sh "echo STEGE-2 executes if branch is master"
                    }
                }
            }    
        }    
    }
}
