pipeline {
    agent any 
    stages {
        stage('STAGE-1') {
            when {
                branch 'master'
            }
            steps{
                sh "echo STAGE-1 executes if branch is master"
            }
        }

        stage('STAGE-2'){
            when {
                branch 'test'
            }
            steps{
                sh "echo STAGE-2 executes if branch is master"
            }
        }
    }
}
post {

        always {
            echo "This will run always"
        }

        success {
            echo "This $JOB_NAME SUCCESS - $BUILD_NUMBER $BUILD_ID $BUILD_DISPLAY_NAME"
        }

        unstable {
            echo "This $JOB_NAME UNSTABLE - $BUILD_NUMBER $BUILD_ID $BUILD_DISPLAY_NAME"
        }

        failure {
            echo "This $JOB_NAME FAILED - $BUILD_NUMBER $BUILD_ID $BUILD_DISPLAY_NAME"
        }

    }
}
