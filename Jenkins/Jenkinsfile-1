pipeline {
    agent any 
    parameters {
        string defaultValue: 'master', name: 'branch', trim: true
    }

    environment {
        BRANCH_NAME = "${branch}"
    }
    stages {
        stage('STAGE-1') {
            when {
                branch 'master'
            }
            steps{
                sh "echo STAGE-1 executes if branch is master"
            }
        }

        stage('STAGE-2'){
            when {
                branch 'test'
            }
            steps{
                sh "echo STAGE-2 executes if branch is master"
            }
        }
    }
  }
 
  


